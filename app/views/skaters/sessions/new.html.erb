
  <div class="container" style="height: auto;">
    <p class="notice"><%= notice %></p>
    <div class="row">
      <div class="form-header text-left">
        <h3>ログイン</h3>
      </div>
    </div>

    <div class="row">
      <div class="form col-sm-7">
        <%= form_for(resource, as: resource_name, url: skater_session_path) do |f| %>
        <% flash.each do |message_type, message| %>
         <%= content_tag :div, message, class:message_type %>
         <% end %>

          <div class="form-group">
            <%= f.label :email, class:"col-form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス", class:"form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password, class:"col-form-label" %>
            <%= f.password_field :password, autocomplete: "パスワード", class:"form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class:"col-form-label" %>
            </div>
          <% end %>

          <div class="actions text-right">
            <%= f.submit "ログイン", class:"btn btn-primary" %>
          </div>
        <% end %><br />
        <%= render "skaters/shared/links" %>
      </div>

    </div>
  </div>

