<% posts.each do |post| %>
<div class="post col-4">
	<div class="post-video">
	    <%= video_tag rails_blob_path(post.video, disposition: "attachment"), :controls => true, size: "350x200" %>
	</div>
	<div class="row">
		<div class="profile-image col-3">
			<%= link_to skater_path(post) do %>
		    <%= attachment_image_tag post.skater, :profile_image, class:"profile-image rounded-circle", size: '50x50', fallback: "no_image.jpg" %>
			<% end %>
		</div>
		<div class="post col-9 clearfix">
			<span class="lead float-left"><%= post.title %></span>

			<% if post.favorited_by?(current_skater) %>
				<%= link_to post_favorites_path(post), method: :delete do %>
		    		<span class="text-body float-right"><i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
		    		<%= post.favorites.count %> いいね</span>
		    	<% end %>
			<% else %>
				<%= link_to post_favorites_path(post), method: :post do %>
		    		<span class="text-body float-right"><i class="fa fa-heart-o" aria-hidden="true"></i>
		    		<%= post.favorites.count %> いいね</span>
		    	<% end %>
			<% end %>
		</div>
	</div>
</div>
<% end %>
<%= paginate posts %>