<div class="body">
	<div class="container">
		<div class="form-header">
			<h3 class="form-header-title text-left">投稿作成画面</h3>
		</div>
		<div class="form-horizontal">
			<%= form_with model: @post, local: true do |f| %>
			<%= render "layouts/error_messages", hoge: @post %>
			<div class="form-group">
				<%= f.label :video %>
				<%= f.file_field :video %>
			</div>
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class:"form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :caption %>
				<%= f.text_area :caption, class:"form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :park_id %>
				<%= f.collection_select :park_id, Park.all, :id, :name, include_blank: true, class:"form-control" %>
			</div>
			<div class="actions">
				<%= f.submit "投稿", class:"btn btn-info" %>
			</div>
			<% end %>

		</div>
	</div>
</div>