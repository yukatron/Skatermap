<div class="row justify-content-center">
	<div class="form col-10">
		<%= form_for(country) do |f| %>
			<%= render "layouts/error_messages", hoge: country %>
			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, class:"form-control", placeholder: "Country name (英語表記で入力してください)" %>
			</div>
			<div class="form-group">
				<%= f.label :description %>
				<%= f.text_area :description, rows:'10', class:"form-control", placeholder: "この国へ行った時に注意することや、スケボに関する情報を入力してください" %>
			</div>

			<div class="actions">
				<%= f.submit "Submit", class:"btn btn-outline-info" %>
			</div>
		<% end %>
	</div>
</div>