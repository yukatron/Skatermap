<% if post.favorited_by?(current_skater) %>
	<%= link_to post_favorites_path(post), method: :delete, remote: true do %>
		<span class="text-body"><i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
		<%= post.favorites.count %></span>
	<% end %>
<% else %>
	<%= link_to post_favorites_path(@post), method: :post, remote: true do %>
		<span class="text-body"><i class="fa fa-heart-o" aria-hidden="true"></i>
		<%= post.favorites.count %></span>
	<% end %>
<% end %>